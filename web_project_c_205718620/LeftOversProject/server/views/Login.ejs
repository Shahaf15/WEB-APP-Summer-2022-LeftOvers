<%- include('header') -%>

  <body onload="getLocation()">
    <div class="background">
      <img src="images/background.jpg" class="imgBack img-fluid" alt="">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <span class="navbar-brand mb-1 h1" id="brocoloImg">
            <img src="images/broccoli_1f966.ico" alt="Logo" width="30" height="24"
              class="d-inline-block align-text-top">
            LeftOvers</span>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
            aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/signup">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" href="#">Advertise</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" href="#">Seek LeftOvers</a>
              </li>
            </ul> 
            <span class="navbar-text text-end" id="hello">
               <%= Answer %>
            </span>
          </div>
        </div>
      </nav>
      <div class="container">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
              <div class="card-body p-4 p-sm-5">
                <h3 class="card-title text-center mb-5 fw-light fs text headline">LeftOvers - Sign In</h3>
                <form action="/Login" method="post">
                  <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"
                      name="email">
                    <label for="floatingInput">Email address</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                      name="password">
                    <label for="floatingPassword">Password</label>
                    <input type="hidden" id="long" name="long">
                    <input type="hidden" id="lat" name="lat">
                  </div>
                  <div class="d-grid">
                    <button class="btn btn-login text-uppercase fw-bold" type="submit">Login</button>
                  </div>
                  <hr class="my-4">
                  <div class="d-grid mb-2">
                    <button class="btn btn-google btn-login text-uppercase fw-bold" type="submit">
                      <i class="fab fa-google me-2"></i> Sign in with Google
                    </button>
                  </div>
                  <div class="d-grid mb-2">
                    <button class="btn btn-facebook btn-login text-uppercase fw-bold" type="submit">
                      <i class="fab fa-facebook-f me-2"></i> Sign in with Facebook
                    </button>
                  </div>
                  <div class="d-grid">
                    <button onclick="location.href='/signup'" type="button" class="btn btn-link" formaction="">Create
                      an account</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

  </html>